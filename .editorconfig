# Indentation Configuration

# Set the default indentation style
[*]
indent_style = space
indent_size = 4

# Specific rules for different file types
[*.njk]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2
